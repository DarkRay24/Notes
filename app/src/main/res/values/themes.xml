<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Notes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

    </style>



    <style name="Theme.Notes" parent="Base.Theme.Notes" />

    <style name="Floating_Button">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:tintMode">@color/white</item>
    </style>

    <style name="cardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="cardView2">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="cardView_home_notes">
        <item name="android:layout_margin">8dp</item>

        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">4dp</item>
    </style>




    <style name="EditText_Title">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText_Body">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="textcolor">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>